{
    "name": "asseco-voice/laravel-comments",
    "description": "Laravel comment system",
    "type": "library",
    "keywords": [
        "php",
        "laravel",
        "comments",
        "microservices",
        "database"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "asseco-voice/laravel-common": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.4.4",
        "fakerphp/faker": "^1.9.1",
        "orchestra/testbench": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Asseco\\Comments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Asseco\\Comments\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Asseco\\Comments\\CommentsServiceProvider"
            ]
        }
    }
}
